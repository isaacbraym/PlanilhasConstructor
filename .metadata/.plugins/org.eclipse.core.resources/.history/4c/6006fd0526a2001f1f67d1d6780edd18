import org.apache.poi.ss.usermodel.Workbook;

import java.io.IOException;
import java.util.List;

public interface IPlanilha {
    void criarPlanilha(String nomeSheet);
    void inserirDadosColuna(List<String> dados, int numeroColuna, int linhaInicial);
    void inserirDadosLinha(List<String> dados);
    IPlanilha naCelula(int coluna, int linha);
    IPlanilha gravarDadoNaCelula(String posicao);
    IPlanilha inserirDadosArquivo(String caminhoArquivo);
    EstiloCelula aplicarEstilo();
    Workbook obterWorkbook();
    IPlanilha converterEmNumero(String posicaoInicial);
    IPlanilha somarColuna(String posicaoInicial);
    IPlanilha somarColunaComTexto(String posicaoInicial, String texto);
    void aplicarBoldStyle(int numeroColuna);
    void salvarPlanilha(String nomeArquivo) throws IOException;
}
