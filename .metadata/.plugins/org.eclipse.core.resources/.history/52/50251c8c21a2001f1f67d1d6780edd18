import org.apache.poi.ss.usermodel.Workbook;
import java.util.List;

public interface IPlanilha {
    void criarPlanilha(String nomeSheet);
    void inserirDadosColuna(List<String> dados, int numeroColuna, int linhaInicial);
    void aplicarBoldStyle(int numeroColuna);
    Workbook obterWorkbook();
    
    // Métodos adicionais para funcionalidades
    EstiloCelula aplicarEstilo();
    PlanilhaBase converterEmNumero(String posicaoInicial);
    PlanilhaBase somarColuna(String posicaoInicial);
    
    // Métodos para inicializar e salvar a planilha
    void iniciarDiretorioSaida(String diretorio);
    void iniciarDiretorioSaida(); // Sobrecarga para o caminho padrão
    void salvarPlanilha(String caminhoArquivo);
    void salvarPlanilha(String caminhoArquivo, String mensagem); // Sobrecarga para mensagem personalizada
	PlanilhaBase gravarDadoNaCelula(String string);
}
