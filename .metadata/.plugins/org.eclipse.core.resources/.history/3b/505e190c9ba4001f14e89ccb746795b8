package com.abnote.planilhas.estilos.estilos;

import org.apache.poi.ss.usermodel.*;
import com.abnote.planilhas.estilos.EstiloCelula;

public class BordersStyle {
    private final Workbook workbook;
    private final Sheet sheet;
    private final EstiloCelula estiloCelula;

    public BordersStyle(Workbook workbook, Sheet sheet, EstiloCelula estiloCelula) {
        this.workbook = workbook;
        this.sheet = sheet;
        this.estiloCelula = estiloCelula;
    }

    public EstiloCelula todasAsBordasEmTudo() {
        // Implementação delegada da classe original para aplicar todas as bordas
        // Similar à lógica que estava na classe EstiloCelula
        // ...
        // Por exemplo:
        return estiloCelula;
    }

    public EstiloCelula aplicarBordasNaCelula(String posicao) {
        // Implementação delegada para aplicar bordas em uma célula específica
        // ...
        return estiloCelula;
    }

    public EstiloCelula aplicarTodasAsBordasDeAte(String posicaoInicial, String posicaoFinal) {
        // Implementação delegada para aplicar bordas em um intervalo
        // ...
        return estiloCelula;
    }

    public EstiloCelula bordasEspessas(String posicaoInicial, String posicaoFinal) {
        // Implementação delegada para aplicar bordas espessas
        // ...
        return estiloCelula;
    }

    public EstiloCelula bordasEspessasComBordasInternas(String posicaoInicial, String posicaoFinal) {
        // Implementação delegada para aplicar bordas espessas com internas finas
        // ...
        return estiloCelula;
    }

    // Métodos auxiliares específicos para bordas podem ser adicionados aqui
}
